

function solve(arr) {

//     let result = arr.slice(0, 1)
//
//     for (let i = 1; i < arr.length; i++) {
//         if (arr[i] >= result[result.length - 1]) {
//             result.push(arr[i])
//             }
// }
//
//     return result

  let result = arr.reduce((acc,current) => {
      if(current>= Math.max(...acc)) {
          acc.push(current)
      }
      return acc
  },[])
    return result
}


console.log(
    solve([1,3,8,4,10,12,3,2,24])
)
->[ 1, 3, 8, 10, 12, 24 ]
