function solution(N) {
    let counterGaps = [];
    let transformNumBynaryGaps = num => (num >>> 0).toString(2)


    transformNumBynaryGaps(N).split("1").forEach((x, i, arr) => {
        (x.includes("0") && arr[i - 1] !== undefined && arr[i + 1] !== undefined) ?
            counterGaps.push(x.length) : false;
    })
   
    return (counterGaps.length > 0) ? Math.max(...counterGaps) : 0
   

}
console.log(solution(32))

-> 0
